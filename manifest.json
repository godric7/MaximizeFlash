{
  "name": "MaximizeFlash",
  "version": "1.0",
  "description": "Resize flash elements to fit window size.",
  "page_action": {
    "default_icon": "maximize-32.png",
    "default_title": "MaximizeFlash"
  },
  "icons": { 
    "16": "maximize-16.png",
    "32": "maximize-32.png",
    "48": "maximize-48.png",
    "128": "maximize-128.png"
  },
  "content_scripts": [{ 
    "all_frames": true,
    "css": [ "style.css" ],
    "js": [ "content.js" ],
    "matches": [ "http://*/*", "https://*/*" ],
    "run_at": "document_end"
   }],
  "background_page": "background.html",
  "permissions": ["tabs", "http://*/*"]
}